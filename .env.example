# Supabase Project Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-from-supabase-dashboard
SUPABASE_SERVICE_KEY=your-service-role-key-from-supabase-dashboard

# Stripe Payment Configuration
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Server Configuration
# The Stripe server will run on this port (frontend remains on 3000)
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins for the Stripe server
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Platform Fees (in percentage)
BUYER_FEE=5
SELLER_FEE=10

# Application URL (for emails and redirects)
APP_URL=http://localhost:3000